<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NoRoommatesActivity">

    <TextView
        android:id="@+id/no_roommates_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="306dp"
        android:text="You are currently not part of a roomamate group."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/no_roommates_createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:text="Create"
        app:layout_constraintBaseline_toBaselineOf="@+id/no_roommates_joinButton"
        app:layout_constraintStart_toStartOf="@+id/no_roommates_message" />

    <Button
        android:id="@+id/no_roommates_joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="42dp"
        android:text="Join"
        app:layout_constraintEnd_toEndOf="@+id/no_roommates_message"
        app:layout_constraintTop_toBottomOf="@+id/no_roommates_message" />

</androidx.constraintlayout.widget.ConstraintLayout>