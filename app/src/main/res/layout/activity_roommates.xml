<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RoommatesActivity">

    <Button
        android:id="@+id/roommates_leaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="27dp"
        android:text="Leave"
        app:layout_constraintBottom_toTopOf="@+id/roommates_sendNotificationButton"
        app:layout_constraintStart_toStartOf="@+id/roommates_logOutButton" />

    <TextView
        android:id="@+id/roommates_joinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="95dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/roommates_logOutButton"
        app:layout_constraintStart_toStartOf="@+id/roommates_logOutButton" />

    <Button
        android:id="@+id/roommates_sendNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="17dp"
        android:text="Send Notification"
        app:layout_constraintBottom_toTopOf="@+id/roommates_savedNotificationButton"
        app:layout_constraintEnd_toEndOf="@+id/roommates_savedNotificationButton" />

    <Button
        android:id="@+id/roommates_savedNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="157dp"
        android:text="Saved Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/roommates_logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="29dp"
        android:text="Log out"
        app:layout_constraintBottom_toTopOf="@+id/roommates_leaveButton"
        app:layout_constraintEnd_toEndOf="@+id/roommates_sendNotificationButton" />
</androidx.constraintlayout.widget.ConstraintLayout>